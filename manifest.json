{
  "manifest_version": 2,

  "name": "Ninja Account",
  "description": "Ninja Account helps you being free on the web",
  "version": "1.0",
  "background": {
    "scripts" : [
      "node_modules/lodash/lodash.js",
      "node_modules/jquery/dist/jquery.js",
      "ninja-storage-service.js",
      "ninja-guerrilla-service.js",
      "ninja-event-page.js"
    ],
    "persistent" : false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "ninja.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
